
<% if notice %>
  <p id="notice"><%= notice %></p> <% end %>
<h1>Product Catalog</h1>
<% @products.each do |product| %>
  <div class="entry">
    <div class="col-md-6">
      <%= image_tag(product.image_url) %>
    </div>
    <div class="col-md-6">
      <h3><%= product.title %></h3>
      <p><%= sanitize(product.description) %> </p>
      <div class="price_line">
        <span class="price"><%= product.price %></span>
      </div>
    </div>
  </div>
<% end %>
